{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "bunx --bun astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@playform/compress": "^0.2.0",
    "dayjs": "^1.11.13",
    "katex": "^0.16.22",
    "rehype-katex": "^7.0.1",
    "remark-emoji": "^5.0.1",
    "remark-math": "^6.0.0",
    "to-jyutping": "^3.1.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@unocss/reset": "^66.3.3",
    "astro": "^5.12.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-md-nocjsp": "^1.5.1",
    "typescript": "^5.8.3",
    "unocss": "^66.3.3"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-md-nocjsp"
    ],
    "htmlWhitespaceSensitivity": "ignore",
    "bracketSameLine": false,
    "printWidth": 120,
    "overrides": [
      {
        "files": [
          "*.md",
          "README"
        ],
        "options": {
          "parser": "markdown-nocjsp"
        }
      },
      {
        "files": [
          "*.mdx"
        ],
        "options": {
          "parser": "mdx-nocjsp"
        }
      }
    ]
  }
}
